#:kivy 1.10
<RootWidget>:

	Button:
		#Propriedades com sufixo hint significam que o valor deve ser percentual
		#nos valores de 0.0 a 1.0 (ou 0.00 a 1.)
		size_hint: None, None 
		size: 350, 50 #Tamanho do botão

		#Definindo x e y em valor absoluto
		x: 100        #Posição x  
		y: 350        #Posição y

		text: "px"    

	Button:
		size_hint: None, None
		size: dp(350), (50)

		#Definindo x e y passando uma tupla
		pos: dp(100), dp(270)
		text: "dp"

	Button:

		size_hint: .5, .09  #Definição de forma percentual 
		#Espera um dicionário com as posições x e y em percentual
		pos_hint: {"x": .1, "y": .1} 
		text: "%"

	#Resumo de como definir posição x e y:
	#x = 20
	#y = 30

	#pos: 100, 270

	#pos_hint: {"x": .1, "y": .1} 